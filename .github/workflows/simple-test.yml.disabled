name: Simple Test

on:
  push:
    branches: [main]

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Basic test
        run: |
          echo "Testing basic functionality"
          ls -la
          test -f backend-fix/server.js && echo "Backend found" || echo "Backend missing"
          test -f frontend/index.html && echo "Frontend found" || echo "Frontend missing"