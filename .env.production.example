# ProjectHub-MCP Production Environment Configuration
# Copy this file to .env.production and update with your values

# Docker Registry (optional - defaults to GitHub Container Registry)
# DOCKER_REGISTRY=ghcr.io/anubissbe
# VERSION=latest

# Database Configuration
DB_USER=projecthub
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_NAME=projecthub_mcp
DB_PORT=5432

# Backend Configuration
BACKEND_PORT=3001
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_MIN_32_CHARS
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost,http://localhost:80

# Email Configuration (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Redis Configuration (optional)
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Logging
LOG_LEVEL=info

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW=900000  # 15 minutes in ms
# RATE_LIMIT_MAX=100        # max requests per window

# SSL/TLS Configuration (for production with nginx)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration (optional)
# BACKUP_RETENTION_DAYS=7
# BACKUP_SCHEDULE="0 2 * * *"  # 2 AM daily

# Monitoring (optional)
# SENTRY_DSN=your-sentry-dsn
# PROMETHEUS_ENABLED=true
# GRAFANA_ENABLED=true