# Miscellaneous
*.tgz
*.tar.gz

# ==============================================
# Project-specific ignores
# ==============================================

# Migration scripts (if they contain sensitive data)
# migrations/seed-*.sql

# Local configuration overrides
config.local.json
settings.local.json

# User-uploaded files
uploads/*
!uploads/.gitkeep

# Generated documentation
docs/api/generated/

# Local database dumps
*.dump
dump_*.sql

# ==============================================
# Never commit these file types
# ==============================================

# Passwords, tokens, and secrets
*password*
*secret*
*token*
*key*
*credentials*

# Except for examples and templates
!.env.example
!example-*.json
!template-*.json
!*example.js
!*template.js

# Production configurations
docker-compose.prod.yml
docker-compose.production.yml

# Monitoring and analytics
.vscode/settings.json
.history/

# Development artifacts to prevent
# (These were causing clutter in the past)
test-*.html
debug-*.js
fix-*.js
*-backup*.html
*-fix.js
*-patch.js
inject-*.js
browser-*.js
capture-*.js
take-*.js
modern-ui-*.js
modern-ui-*.css
verify-*.js
diagnose-*.html
temp-files-backup/
deployment_package/

# Archive packages (keep only official releases)
projecthub-*.tar.gz
!projecthub-deployment-package.tar.gz
# Wiki clones
ProjectHub-Mcp.wiki/
wiki/projecthub-wiki/
