# =============================================================================
# ProjectHub-MCP Environment Configuration
# =============================================================================
# Copy this file to .env and update with your actual values
# 
# Security Notes:
# - Use strong, unique secrets for JWT tokens (minimum 32 characters)
# - Never commit the actual .env file to version control
# - Use different secrets for development and production
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL 16+ connection details
DATABASE_URL=postgresql://username:password@localhost:5432/projecthub_mcp
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=projecthub_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=projecthub_mcp

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment: development, staging, production
NODE_ENV=development

# Backend API port
PORT=3001

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# API Base URL (for frontend)
VITE_API_URL=http://localhost:3001/api

# =============================================================================
# JWT AUTHENTICATION & SECURITY
# =============================================================================
# Generate strong secrets using: openssl rand -base64 32
# IMPORTANT: Use different secrets for access and refresh tokens
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-minimum-32-characters
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-minimum-32-characters

# Token expiration times
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# EMAIL CONFIGURATION (SMTP)
# =============================================================================
# Email service configuration for notifications and invitations
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email sender information
FROM_EMAIL=noreply@yourcompany.com
FROM_NAME=ProjectHub Team

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
# Enable/disable real-time features
WEBSOCKET_ENABLED=true

# CORS configuration
CORS_ORIGIN=http://localhost:5173

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
# Secret for HMAC webhook verification
WEBHOOK_SECRET=your-webhook-secret-for-hmac-verification

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate limiting configuration (milliseconds)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API rate limiting per IP
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# MCP SERVER URLS (OPTIONAL)
# =============================================================================
# Enhanced MCP ecosystem integration
# Leave blank if not using additional MCP servers
KNOWLEDGE_GRAPH_URL=http://localhost:8001
RAG_URL=http://localhost:8002
VECTOR_DB_URL=http://localhost:8003
UNIFIED_DB_URL=http://localhost:8004
PROJECT_TASKS_URL=http://localhost:8005
GOOGLE_WORKSPACE_URL=http://localhost:8006
VAULT_URL=http://localhost:8007
SLACK_URL=http://localhost:8008
GITHUB_URL=http://localhost:8009
BRAVE_SEARCH_URL=http://localhost:8010

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log file paths (optional)
LOG_FILE_PATH=logs/app.log
ERROR_LOG_FILE_PATH=logs/error.log

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
# Session cookie settings
SESSION_SECRET=your-session-secret-minimum-32-characters
SESSION_SECURE=false
SESSION_MAX_AGE=86400000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
FEATURE_ANALYTICS=true
FEATURE_WEBHOOKS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_TEAM_MANAGEMENT=true
FEATURE_WORKSPACES=true
FEATURE_ADVANCED_REPORTING=true

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Development-specific settings (only in development)
# DEBUG=*
# MOCK_EMAIL=true
# DISABLE_AUTH=false

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Additional production-specific settings
# TRUST_PROXY=true
# SECURE_COOKIES=true
# HTTPS_REDIRECT=true

# =============================================================================
# MONITORING & OBSERVABILITY (OPTIONAL)
# =============================================================================
# Application monitoring
# SENTRY_DSN=https://your-sentry-dsn
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# DATADOG_API_KEY=your-datadog-key

# Health check endpoints
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# Database backup configuration
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
# BACKUP_S3_BUCKET=your-backup-bucket

# =============================================================================
# CDN & STATIC ASSETS (PRODUCTION)
# =============================================================================
# CDN configuration for static assets
# CDN_URL=https://cdn.yourcompany.com
# STATIC_ASSETS_URL=https://assets.yourcompany.com

