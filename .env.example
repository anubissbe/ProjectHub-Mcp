# ProjectHub MCP Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=projecthub
DB_USER=projecthub
DB_PASSWORD=your_secure_password
DB_SSL=false

# Alternative: Full database URL (overrides individual DB settings if provided)
# DATABASE_URL=postgresql://projecthub:your_secure_password@postgres:5432/projecthub

# Application Configuration
NODE_ENV=production
PORT=3009
API_PORT=3009
FRONTEND_PORT=8090
MCP_PORT=3013

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=12

# External Database Ports (for host access)
DB_EXTERNAL_PORT=5434

# CORS Configuration
CORS_ORIGIN=http://localhost:8090

# API Configuration
API_BASE_URL=http://localhost:3009

# MCP Configuration
MCP_API_KEY=

# Optional: Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret

# Optional: Email Configuration (if using email features)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@projecthub.local

# Optional: Redis Configuration (if using caching)
REDIS_URL=redis://localhost:6379

# Optional: Logging
LOG_LEVEL=info

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100