# ==============================================
# ProjectHub-MCP Environment Configuration
# ==============================================

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/projecthub_mcp
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=projecthub_mcp

# Application Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:5173

# JWT Authentication
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-key-here-change-in-production
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-key-here-change-in-production

# WebSocket Configuration
WEBSOCKET_ENABLED=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret-key-for-hmac-verification

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Email Configuration (for team invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@projecthub.local

# File Upload Configuration
UPLOAD_PATH=uploads
MAX_FILE_SIZE=10485760

# Redis Configuration (optional, for session storage)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-change-in-production

# Third-party API Keys (if needed)
# SLACK_BOT_TOKEN=xoxb-your-slack-token
# GITHUB_TOKEN=ghp_your-github-token
# GOOGLE_CLIENT_ID=your-google-client-id
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Development/Testing
SKIP_AUTH=false
MOCK_EXTERNAL_APIS=false
E2E_BASE_URL=http://localhost:5173

# Production Settings
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private-key.pem
# TRUSTED_PROXIES=192.168.1.0/24

# ==============================================
# Notes:
# 1. Copy this file to .env and fill in your values
# 2. Never commit .env to version control
# 3. Use strong, unique values for all secrets
# 4. In production, use environment-specific values
# ==============================================