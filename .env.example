# ProjectHub-MCP Environment Configuration
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_USER=projecthub
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=projecthub_db
POSTGRES_PORT=5432

# Backend Configuration
NODE_ENV=production
BACKEND_PORT=3001
CORS_ORIGIN=http://localhost:5173

# Frontend Configuration
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=ws://localhost:3001

# Optional: External Database
# Use this if you have an existing PostgreSQL server
# DATABASE_URL=postgresql://user:password@your-host:5432/projecthub_db

# Optional: Production Domain Setup
# CORS_ORIGIN=https://yourdomain.com
# VITE_API_URL=https://yourdomain.com/api
# VITE_WS_URL=wss://yourdomain.com

# Optional: Authentication (if implementing)
# JWT_SECRET=your_jwt_secret_here
# SESSION_SECRET=your_session_secret_here

# Optional: Email Configuration (if implementing)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info