# Synology Deployment Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# Frontend URL (for CORS)
FRONTEND_URL=http://your-synology-ip:5173

# API URL (for frontend)
API_URL=http://your-synology-ip:3001/api
WS_URL=ws://your-synology-ip:3001

# JWT Secrets (generate strong random strings)
JWT_ACCESS_SECRET=your-very-secure-access-token-secret-change-this
JWT_REFRESH_SECRET=your-very-secure-refresh-token-secret-change-this

# Email Configuration (optional, for team invitations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password