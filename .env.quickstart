# =============================================================================
# ProjectHub-MCP Quick Start Configuration
# =============================================================================
# This is a minimal configuration for getting started quickly with Docker
# Copy this to .env and customize as needed
# =============================================================================

# =============================================================================
# DATABASE CONFIGURATION (Required)
# =============================================================================
DB_USER=projecthub
DB_PASSWORD=projecthub_secure_2024
DB_NAME=projecthub_mcp
DB_PORT=5432

# =============================================================================
# JWT SECRETS (Required - Change these!)
# =============================================================================
# Generate secure secrets: openssl rand -base64 32
JWT_SECRET=change-this-to-a-secure-secret-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# APPLICATION PORTS
# =============================================================================
FRONTEND_PORT=5173
BACKEND_PORT=3001

# =============================================================================
# API CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:5173
VITE_API_URL=http://localhost:3001/api
VITE_WS_URL=http://localhost:3001

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
# Leave empty to disable email features
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@projecthub.local

# =============================================================================
# REDIS (Optional)
# =============================================================================
REDIS_PASSWORD=changeme

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Docker image settings
DOCKER_REGISTRY=ghcr.io/anubissbe
VERSION=latest

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=info